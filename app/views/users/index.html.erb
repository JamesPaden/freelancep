<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
    <th>Description</th>
    <th>Url</th>
    <th>Reciprocal</th>
    <th>Password</th>
    <th>Salt</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.city %></td>
    <td><%=h user.state %></td>
    <td><%=h user.zip %></td>
    <td><%=h user.country %></td>
    <td><%=h user.description %></td>
    <td><%=h user.url %></td>
    <td><%=h user.reciprocal %></td>
    <td><%=h user.password %></td>
    <td><%=h user.salt %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>